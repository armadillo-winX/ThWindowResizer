<Window x:Class="ThWindowResizer.DirectResizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThWindowResizer"
        mc:Ignorable="d"
        Title="DirectResizer" Height="18" Width="320" ResizeMode="CanMinimize" WindowStyle="None">
    <Grid>
        <Menu>
            <MenuItem Header="リサイズ">
                <MenuItem Header="640x480" Click="MenuItem1Click"/>
                <MenuItem Header="960x720" Click="MenuItem2Click"/>
                <MenuItem Header="1280x960" Click="MenuItem3Click"/>
            </MenuItem>
            <MenuItem x:Name="CloseMenuItem" Header="閉じる" Click="CloseMenuItemClick"/>
        </Menu>

    </Grid>
</Window>
